<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Book A Table</title>
  <link href="https://fonts.googleapis.com/css2?family=Playball&family=Poppins:wght@300;500&display=swap" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background-color: #e6d3a5;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    #ba {
      background-color: #fff;
      padding: 30px 20px;
      border-radius: 20px;
      max-width: 700px;
      width: 90%;
      margin: 100px auto;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    #namie {
      text-align: center;
      font-size: 2rem;
      font-family: 'Playball', cursive;
      color: #fb8500;
      margin-bottom: 20px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }

    label {
      font-weight: 500;
      margin-bottom: 5px;
    }

    input, select {
      padding: 10px;
      border: 2px solid #fb8500;
      border-radius: 10px;
      outline: none;
      font-size: 1rem;
      width: 100%;
    }

    input:focus, select:focus {
      border-color: #ffb703;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    .form-row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .form-row .form-group {
      flex: 1;
      min-width: 140px;
    }

    .submit-button {
      background-color: #fb8500;
      color: #fff;
      border: none;
      padding: 12px;
      font-size: 1rem;
      font-weight: 500;
      border-radius: 10px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .submit-button:hover {
      background-color: #e07c00;
    }

    #pngbk {
      display: none;
    }

    @media (min-width: 768px) {
      #ba {
        padding: 40px;
      }

      #pngbk {
        display: block;
        position: absolute;
        top: 20px;
        right: 20px;
        max-width: 150px;
      }
    }
  </style>
</head>
<body>

  <div id="pngbk">
    <img src="images/logo-removebg-preview.png" height="80" alt="Book a Table Illustration" />
  </div>

  <section id="ba">
    <h2 id="namie">Book A Table</h2>

      <div class="form-row">
        <div class="form-group">
          <label for="Firstname">First Name</label>
          <input type="text" name="fname" id="Firstname" required />
        </div>
        <div class="form-group">
          <label for="Lastname">Last Name</label>
          <input type="text" name="lname" id="Lastname" required />
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="Phone">Phone</label>
          <input type="tel" name="phone" id="Phone" required />
        </div>
        <div class="form-group">
          <label for="Email">Email</label>
          <input type="email" name="email" id="Email" required />
        </div>
      </div>

      <div class="form-row">
        <div class="form-group">
        <label for="bookType">Booking Type</label>
        <select name="bookType" id="bkty" required>
      <option value="" disabled selected>Select Booking Type</option>
      <option value="Single">Single</option>
      <option value="Group">Group</option>

  </select>
        </div>
        <div class="form-group">
        <label for="pac" id="tegr">Table Location <span id="capacity"></span></label>
       <select name="location" id="tl" required>
        <option value="" disabled selected>Select Table Location</option>
        <%tables.forEach(table => {%>    
        <option value="<%=table.location%>" 
            style="text-transform: capitalize;"><%=table.location%></option>
    <%})%>
</select>
        </div>

      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="Guests">Number of Guests</label>
  <input type ="number" name="numPeople" placeholder="Number of Guests" id="guests" required min="1">
        </div>

        <div class="form-group">
          <label for="Date">Date</label>
          <input type="date" name="date" id="Date" required />
        </div>
      </div>

      <div class="form-row">
      <div class="form-group">
        <label for="Time">Time</label>
        <input type="time" name="time" id="Time" required />
      </div>

      <div class="form-group">
        <label for="Until">Until</label>
        <input type="time" name="until" id="Until" required />
      </div>

      </div>

      <div class="form-group">  
    <p>Total Amount: NGN <span id="amount">0</span></p>
      </div>
      <button id="Submit" class="submit-button">Book Now</button>
  </section>

<script>
  async function updatePrice() {
    const bookingType = document.getElementById('bkty').value;
    const location = document.getElementById('tl').value;
    const guests = parseInt(document.getElementById('guests').value);

    if (!bookingType || !location || isNaN(guests)) return;

    const res = await fetch(`/booking/pricing?bookingType=${bookingType}&location=${location}`);
    const data = await res.json();

    if (data.price) {
      const total = guests * data.price;
      document.getElementById('amount').innerText = total;
    }
  }
  // Event listeners
  document.getElementById('bkty').addEventListener('change', updatePrice);
  document.getElementById('tl').addEventListener('change', updatePrice);
  document.getElementById('guests').addEventListener('input', updatePrice);


   document.querySelector("#Submit").addEventListener('click', async (e) => {
    e.preventDefault();
    let Fname = document.querySelector("#Firstname").value;
    let Lname = document.querySelector("#Lastname").value;
    let Email = document.querySelector("#Email").value;
    let Phone = document.querySelector("#Phone").value;
    let BookType = document.querySelector("#bkty").value;
    let Location = document.querySelector("#tl").value;
    let Date = document.querySelector("#Date").value;
    let Time = document.querySelector("#Time").value;
    let Until = document.querySelector("#Until").value;
    let Amount = document.querySelector("#amount").innerText;
    let Guests = document.querySelector("#guests").value;
    
    let mydata =    {
         fname:Fname,
         lname:Lname, 
         email:Email, 
         phone:Phone,
         amount:Amount,
         bookType:BookType,
         location:Location, 
         date:Date, 
         time:Time, 
         until:Until,
         guests:Guests,
        }
        console.log(mydata)
      const response = await fetch('/pay', {
        method: 'POST',
        headers: { 'Content-Type':'application/json' },
        body: JSON.stringify(mydata)
      });
      const data = await response.json();
      window.location.href = data.authorization_url; // Redirect to Paystack's payment page
    });
</script>
</body>
</html>