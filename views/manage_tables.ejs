//Function to update booking record
function updateTable(data){
fetch('/admin/update_table', {
  method: 'POST',
  headers:{
    'Content-Type': 'application/json',
  },
  body:JSON.stringify(data)
})
.then(response => {response.json();
  if(response.ok){
    alert(`Table with id number ${data.id} record updated successfully!`)
  }else{
    alert("Unable to update table record!")
  }
  })
}
//Function to delete booking record
function deleteTable(data){
  fetch('/admin/delete_table', {
    method: 'POST',
    headers:{
      'Content-Type': 'application/json'
    },
    body:JSON.stringify(data)
  })
  .then(response => {
    response.json();
    if(response.ok){
      alert(`Table with the id number ${data.id} has been deleted!`)
      window.location.href('/admin/manage_booking')
    }else{
      alert('Unable to delete table record')
    }
  })
}
